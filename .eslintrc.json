{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
},
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-in-parens": "warn",
    "space-infix-ops": "warn",
    "keyword-spacing": ["warn", { "before": true }],
    "indent": [
      "error", 2, { "SwitchCase": 1 }
    ]
  }
}