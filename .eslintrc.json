{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
},
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-in-parens": "warn",
    "space-infix-ops": "warn",
    "indent": [
      "error", 2
    ]
  }
}